<nav>
  <div class="nav-wrapper">
    <%= link_to image_tag('smiling_wasabi', :alt => 'Smiling Wasabi', id: 'wasabi_logo'), root_path, class: "brand-logo" %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if current_user.nil? %>
          <%= form_tag '/login', method: 'post' do %>
            <li><%= text_field_tag :email, nil, placeholder: 'Email' %></li>
            <li><%= password_field_tag :password, nil, placeholder: 'Password' %></li>
            <li><%= submit_tag "Login", class: 'waves-effect waves-light btn' %></li>

            <li><%= link_to "Sign Up!", signup_path, id: 'signup_link', class: 'sign-up' %></li>
          <% end %>
        <% else %>
          <%= form_tag logout_path, method: 'get' do %>
            <li><%= submit_tag "Logout", class: 'waves-effect waves-light btn' %></li>
          <% end %>
        <% end %>
      </ul>
  </div>
</nav>