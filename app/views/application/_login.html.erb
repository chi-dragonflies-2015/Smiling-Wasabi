<div class="general-container">
  <%= form_tag login_path, class: 'row' do %>
    <%= text_field_tag :email, nil, class: 'col s2 offset-s7', placeholder: 'Email' %>
    <%= password_field_tag :password, nil, class: 'col s2', placeholder: 'Password' %>
    <%= submit_tag "Login" %>

    <%= link_to "Sign Up!", signup_path, id: 'signup_link', class: 'sign-up' %>
  <% end %> 
</div>