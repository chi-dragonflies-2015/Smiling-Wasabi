<% if flash[:success] %>
  <div class="success" style="color:green"><%= flash[:success] %></div>
<% end %>
<%= render "login" %>

<h1>Welcome to Smiling Wasabi!</h1>


<% @genres.each do |genre|%>
  <div class = 'genre-tag'>
    <h2><%= genre.name %></h2>
    <% genre.top5films.each.with_index do |film, index| %>
      <p class = 'movie-short'>
        <%= index + 1 %> <%= film.title %> <%= film.review_score %>
      </p>
    <% end %>
  </div>
<% end %>