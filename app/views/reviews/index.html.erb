<div class="container">
<div class="side_bar">

		<div class="card">
      <div class="card-image">
        <img src="<%= @film.movie_art %>">
        
      </div>
    </div>

	</div> 

	<table>
		<h2> Reviews </h2>
	  
	    <% @reviews.each do |review| %>
	    <tr class="review">
	    <td>By <%= review.user.name %></td>
	    <td><%= review.content %><br/>
	     <%= link_to('View Review...', film_review_url(@film, review)) %>
	    </td>

	    </tr>
	<% end %>
	</table>

</div>