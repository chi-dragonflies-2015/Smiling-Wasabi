	<div class="side_bar">
		<div class="card">
      <div class="card-image">
        <img src=" <%= @film.movie_art %>">
        <span class="card-title">Card Title</span>
      </div>
    </div>
	</div>

		<h4> <%= @film.title %> </h4>

	<div class="full_review">
